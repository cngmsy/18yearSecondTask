<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
         android:background="@drawable/songlistbackground">
    <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="20dp"
          android:background="@drawable/transparent">
        
      		  <ImageView android:id="@+id/id_cover_img"
        	      android:layout_marginLeft="10dp"
         	 	  android:layout_width="120dp"
         		  android:layout_height="120dp"
         	 	  android:src="@drawable/songlist143"/>
      		<LinearLayout android:layout_width="match_parent"
      			android:layout_height="120dp"
      			android:orientation="vertical">
      				<TextView android:layout_width="match_parent"
          				android:layout_height="0dp"
          				android:layout_weight="1"
          				android:id="@+id/id_songlistName_tv"
          				android:layout_marginLeft="20dp"
          				android:text="【电音是海风味的】"
          				android:textSize="17sp"
          				android:textColor="@drawable/white"
          				android:gravity="center_vertical"
          				android:singleLine="false"/>
    				<LinearLayout 
    				     android:id="@+id/id_userinfo_layout"
    				     android:layout_width="match_parent"
     					 android:layout_height="0dp"
						 android:layout_weight="1"
      					 android:orientation="horizontal"
      					 android:gravity="center_vertical">
        					<ImageView android:id="@+id/id_head_img"
            					android:layout_marginLeft="20dp"
            					android:layout_width="40dp"
            					android:layout_height="40dp"
            					android:src="@drawable/head64"/>
        					<TextView 
            					android:id="@+id/id_username_tv"
            					android:layout_marginLeft="10dp"
            					android:layout_width="wrap_content"
            					android:layout_height="wrap_content"
            					android:textColor="@drawable/white"
            					android:text="你这兄弟我交定了"
            					android:textSize="13sp"/>
    				</LinearLayout>
      		</LinearLayout>
  </LinearLayout>
  <LinearLayout android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="10dp"
      android:orientation="horizontal">
  		<LinearLayout 
  		    android:id="@+id/id_add_layout"
  		    android:layout_width="0dp"
  		    android:layout_weight="1"
  		    android:layout_height="match_parent"
  		    android:orientation="vertical">
  		    <ImageView 
  		        android:id="@+id/id_storage_img"
  		        android:src="@drawable/folder"
  		        android:layout_width="30dp"
  		        android:layout_height="0dp"
  		        android:layout_weight="1"
  		        android:layout_gravity="center"
  		        />
  		    <TextView 
  		        android:id="@+id/id_storagecount_tv"
  		        android:layout_width="match_parent"
  		        android:layout_height="0dp"
  		        android:layout_weight="1"
  		        android:text="收藏"
  		        android:textColor="@drawable/white"
  		        android:gravity="center"
  		        android:textSize="13sp"/>
  		</LinearLayout>   
  			<LinearLayout 
  		    android:id="@+id/id_share_layout"
  		    android:layout_width="0dp"
  		    android:layout_weight="1"
  		    android:layout_height="match_parent"
  		    android:orientation="vertical">
  		    <ImageView android:src="@drawable/share"
  		        android:layout_width="30dp"
  		        android:layout_height="0dp"
  		        android:layout_weight="1"
  		        android:layout_gravity="center"
  		        />
  		    <TextView 
  		        android:id="@+id/id_sharecount_tv"
  		        android:layout_width="match_parent"
  		        android:layout_height="0dp"
  		        android:layout_weight="1"
  		        android:text="分享"
  		        android:textColor="@drawable/white"
  		        android:gravity="center"
  		        android:textSize="13sp"/>
  		</LinearLayout>   
  		  
  			<LinearLayout 
  		    android:id="@+id/id_comment_layout"
  		    android:layout_width="0dp"
  		    android:layout_weight="1"
  		    android:layout_height="match_parent"
  		    android:orientation="vertical">
  		    <ImageView android:src="@drawable/comment"
  		        android:layout_width="30dp"
  		        android:layout_height="0dp"
  		        android:layout_weight="1"
  		        android:layout_gravity="center"
  		        />
  		    <TextView 
  		        android:id="@+id/id_commentcount_tv"
  		        android:layout_width="match_parent"
  		        android:layout_height="0dp"
  		        android:layout_weight="1"
  		        android:text="评论"
  		        android:textColor="@drawable/white"
  		        android:gravity="center"
  		        android:textSize="13sp"/>
  		</LinearLayout>   
  			<LinearLayout 
  		    android:id="@+id/id_download_layout"
  		    android:layout_width="0dp"
  		    android:layout_weight="1"
  		    android:layout_height="match_parent"
  		    android:orientation="vertical">
  		    <ImageView android:src="@drawable/downloadwhite"
  		        android:layout_width="30dp"
  		        android:layout_height="0dp"
  		        android:layout_weight="1"
  		        android:layout_gravity="center"
  		        />
  		    <TextView android:layout_width="match_parent"
  		        android:layout_height="0dp"
  		        android:layout_weight="1"
  		        android:text="下载"
  		        android:textColor="@drawable/white"
  		        android:gravity="center"
  		        android:textSize="13sp"/>
  		</LinearLayout> 
  </LinearLayout>
</LinearLayout>
</LinearLayout>
